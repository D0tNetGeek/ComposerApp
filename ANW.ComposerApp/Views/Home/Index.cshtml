@model IEnumerable<ANW.ComposerApp.Models.Composer>

@{
    ViewBag.Title = "Home Page";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Audionetwork - Composers</title>
</head>
<body>
    <div class="jumbotron">
        <h1>Audionetwork</h1>
        <span id="tag-line" class="lead"></span>
    </div>

    <table class="table">
        <tr><th colspan="2">Total number of composers</th><td colspan="2">@Model.Count()</td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Awards)
            </th>
            <th></th>
        </tr>
    
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Awards)
                </td>
                <td>
                    @*@Html.ActionLink("Edit", "Edit", new {id = item.Id}) |*@
                    @Html.ActionLink("Details", "Details", new {id = item.Id})
                    @*@Html.ActionLink("Delete", "Delete", new {id = item.Id})*@
                </td>
            </tr>
        }
    
    </table>
</body>
</html>
